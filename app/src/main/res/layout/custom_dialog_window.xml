<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:background="@drawable/round_item"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/edt_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:hint="@string/first_name_hint"
        tools:text="Bislan" />

    <EditText
        android:id="@+id/edt_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edt_first_name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:hint="@string/last_name_hint"
        />

    <EditText
        android:id="@+id/edt_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edt_last_name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:hint="@string/phone_number_hint"
        />

    <Button
        android:id="@+id/bt_cancellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_phone_number"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/button_cancellation"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_phone_number"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/button_add"
        android:textColor="@color/text" />

</RelativeLayout>